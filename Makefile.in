VPATH=%VPATH%

CC ?= gcc
CXX ?= g++
CXXFLAGS ?=
AR ?= ar
RUSTC ?= rustc
RUSTDOC ?= rustdoc
RUSTFLAGS ?= -O

LIB_RS = src/lib.rs
RUST_SRC = $(shell find $(VPATH)/src/. -type f -name '*.rs')

.PHONY: all
all:	libencoding.dummy

libencoding.dummy: $(LIB_RS) $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@
	touch $@

rustencoding-test: $(LIB_RS) $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: rustencoding-test
	./rustencoding-test

doc: $(LIB_RS) $(RUST_SRC)
	$(RUSTDOC) $(LIB_RS)

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *.exe *-test

